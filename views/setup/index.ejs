<%- include('../layout') -%>
    <h1 class="title">Identifíquese</h1>
    <form action="/setup" method="post">
        <div class="field">
            <label class="label">Ingrese la contraseña</label>
            <% if (error === 'invalid') { %>
                <div class="control has-icons-left has-icons-right">
                    <input id="key" name="key" class="input is-danger" type="password" placeholder="Contraseña">
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                    <span class="icon is-small is-right">
                        <i class="fas fa-exclamation-triangle"></i>
                    </span>
                </div>
                <p class="help is-danger">contraseña incorrecta</p>
                <% } else { %>
                    <p class="control has-icons-left">
                        <input id="key" name="key" class="input" type="password" placeholder="Contraseña">
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>
                    </p>
                    <% } %>
        </div>
        <div class="field">
            <p class="control">
                <button class="button is-success">
                    Ingresar
                </button>
            </p>
        </div>
    </form>